<body>
  <div class="container">
    <h1>Car Details</h1>
    <form method="post" action="/updateCar">
      <h2>Car: <%= item.license %></h2>
      <div class="form-group">
        <label for="deposit">Deposit Side:</label>
        <div class="input-field">
          <input type="checkbox" name="deposit" value="Left"> Left
          <input type="checkbox" name="deposit" value="Right"> Right
          <!-- Add more options as needed -->
        </div>
      </div>

      <div class="form-group">
        <label for="carImages">Car Images:</label>
        <div class="input-field">
          <input type="file" name="carImages" accept="image/*" multiple>
        </div>
      </div>
      
      <div class="form-group">
        <label for="combustible">Combustible:</label>
        <div class="input-field">
          <input type="text" name="combustible">
        </div>
      </div>

      <div class="form-group">
        <label for="notes">Notes:</label>
        <div class="input-field">
          <textarea name="notes" rows="4"></textarea>
        </div>
      </div>

      <div>
        <input type="hidden" name="id" id="id" class="input" value="<%= item._id %>"/>
        <input type="hidden" class="objectId" value="<%= item._id %>"> 
        <button type="submit" class="save-car" data-id="<%= item._id %>">Save</button>
      </div>
    </form>
  </div>
